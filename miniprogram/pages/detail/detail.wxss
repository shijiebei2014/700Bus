/* miniprogram/pages/detail/detail.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.arrow {
  width: 20%;
  height: 30p;
  line-height: 30px;
}

.start {
  text-align: left;
  margin-left: 10px;
}

.end {
  text-align: right;
  margin-right: 10px;
}

.stops_container {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.stop {
  justify-content: flex-start;
  margin-left: 10px;
}
